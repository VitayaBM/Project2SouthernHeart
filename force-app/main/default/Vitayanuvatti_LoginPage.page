<apex:page sidebar="false" controller ="LoginPageController" showHeader="false" standardStylesheets="false">
<apex:form>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <title>Southern Heart Health Insurance Login</title>
    </head>

    <body>
        
            
        <div id="container">
            <form>
                <apex:pageBlock>
                    <apex:pageBlockSection columns="1">
                        <label for="username">Username:</label>
                        <br/>
                        <apex:inputtext value="{!username}"/>
                        <br/>
                        <label for="password">Password:</label>
                        <br/>
                        <apex:inputtext value="{!password}"/>
                        <br/>
                    
                        <div id="lower">
                            <apex:commandButton value="Login" action="{!loggingIn}"/>
                        </div> 
                    </apex:pageBlockSection>                           
            </apex:pageBlock>
            </form>
        </div>
    </body>
</apex:form>


<style>
html, body{
    width: 100%;
    height: 100%;
    font-family: "Garamond", sans-serif;
    -webkit-font-smoothing: antialiased;
    background:#ff4d4d;
}



label{
    margin-left: 25px;
    font-size: 20px;
    display: inline-block;
}

input[type=text]{
    justify-content: center;
    font-size: 14px;
    font-family: sans-serif;
    margin-left: 25px;
    width: 200px;
    height:15px;
}

#lower{
    background: #ecf2f5;
    margin-top: 20px;
    width: 100%;
    height:25px;
    border-top: 1px solid #ccc;
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;
}

#container{
    width: 250px;
    height: 250px;
    position: fixed;
    top:0;
    bottom:0;
    left:0;
    right:0;
    margin:auto;
    background: #fff;
    border: 4px double;
    border-color: #e6e600;
}



</style>
</apex:page>
